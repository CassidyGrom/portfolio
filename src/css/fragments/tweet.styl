#tweet-section
    width 100%
    min-height 550px
    display grid
    grid-template "tweet ." auto ". figure" auto / 70% 30%
    +mq('bp-4')
        grid-template "tweet ." auto ". figure" auto / 80% 20%
    
#tweet-container
    grid-area tweet
    width 100%
    justify-self center
    align-self center

#tweet-button
    grid-area button
    justify-self center
    align-self center

#tweet-graphic
    grid-area figure
    img 
        width 100%
        height 100%
        object-fit contain
        object-position 50% 100%
    &:active
        transform scale(0.9)

.twitter-tweet
    transform scale(0)
    margin auto
    opacity 0

#tweet-sub
    font-size 0.8em
    color grey
    text-align center