$primaryCol =  #EDE5D8
$secondaryCol =  rgb(51,51,51)
$navCol = rgba(0,0,0,0.9)
$bgcol = black

@require 'utils/*'
@require 'fragments/*'
    
html, body
    margin 0
    padding 0
    font-weight 400
    font-style normal
    color $primaryCol
    background-color $bgcol
    width 100%
    height 100%
body    
    overflow-x hidden!important;
    font-family: 'Open Sans', sans-serif;

#navbar
    background-color $navCol
    box-shadow 0px 1px 5px rgb(7,7,7)

a
    color $primaryCol
b
    font-family: "supria-sans-condensed",sans-serif;
    font-weight: 700;
    font-style: italic;
    font-size:4em;
    
.tilt
    font-style: italic;